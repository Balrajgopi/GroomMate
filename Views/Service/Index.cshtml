@model IEnumerable<GroomMate.Models.Service>

@{
    ViewBag.Title = "Our Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choose a Service</h2>
<p>Select one of our services below to book your appointment.</p>

<div class="row">
    @foreach (var service in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@service.ServiceName</h5>
                    <p class="card-text">@service.Description</p>
                    <p class="card-text"><strong>Price:</strong> ₹ @service.Price.ToString("N2")</p>

                    @* --- THIS IS THE NEW LINE FOR PAYMENT INFO --- *@
                    <p class="card-text text-muted"><small>Payment: In Cash at Salon</small></p>

                    <div class="mt-auto">
                        @Html.ActionLink("Book Now", "Create", "Appointment", new { serviceId = service.ServiceID }, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
