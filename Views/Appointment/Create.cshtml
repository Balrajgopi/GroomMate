@model GroomMate.Models.Appointment

@{
    ViewBag.Title = "Book Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Appointment</h2>
<h4>Service: @ViewBag.ServiceName</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* Hide the ServiceID so it gets submitted with the form *@
        @Html.HiddenFor(model => model.ServiceID)

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.AppointmentDate, "Choose Date and Time", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AppointmentDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                @Html.ValidationMessageFor(model => model.AppointmentDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm Booking" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", "Service", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}
