@model IEnumerable<GroomMate.Models.Appointment>
@{ ViewBag.Title = "Staff Dashboard"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<h3>My Assigned Appointments</h3>
<a href="@Url.Action("Logout", "Account")" class="btn btn-secondary mb-3">Logout</a>

<table class="table table-striped">
    <thead class="table-light">
        <tr>
            <th>Customer</th>
            <th>Service</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appt in Model)
        {
            <tr>
                <td>
                    @* SAFE CODE: Prevents crash if User is missing *@
                    @(appt.User?.FullName ?? "User Not Found")
                </td>
                <td>
                    @* SAFE CODE: Prevents crash if Service is missing *@
                    @(appt.Service?.ServiceName ?? "Service Not Found")
                </td>
                <td>@appt.AppointmentDate.ToString("dd-MM-yyyy hh:mm tt")</td>
                <td><span class="badge bg-success">@appt.Status</span></td>
            </tr>
        }
    </tbody>
</table>
