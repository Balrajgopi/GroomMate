@model List<GroomMate.Models.Appointment>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<h3>Assigned Appointments</h3>
<table class="table">
    <thead>
        <tr><th>Service</th><th>Date</th><th>Status</th></tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.Service.ServiceName</td>
                <td>@app.AppointmentDate.ToString("g")</td>
                <td>@app.Status</td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Logout", "Account")" class="btn btn-secondary">Logout</a>
