@model IEnumerable<GroomMate.Models.Appointment>
@{ ViewBag.Title = "Admin Dashboard"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<h3>All Appointments</h3>
<a href="@Url.Action("Logout", "Account")" class="btn btn-secondary mb-3">Logout</a>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Customer</th>
            <th>Service</th>
            <th>Date</th>
            <th>Status</th>
            <th>Staff</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appt in Model)
        {
            <tr>
                <td>@appt.User.FullName</td>
                <td>@appt.Service.ServiceName</td>
                <td>@appt.AppointmentDate.ToString("dd-MM-yyyy hh:mm tt")</td>
                <td><span class="badge bg-info text-dark">@appt.Status</span></td>
                <td>
                    @if (appt.StaffId != null)
                    {
                        @appt.Staff.FullName
                    }
                    else
                    {
                        <span class="text-danger">Unassigned</span>
                    }
                </td>
                <td>
                    @if (appt.Status == "Pending")
                    {
                        using (Html.BeginForm("AssignStaff", "Dashboard", FormMethod.Post, new { @class = "d-flex" }))
                        {
                            <input type="hidden" name="appointmentId" value="@appt.AppointmentID" />
                            @Html.DropDownList("staffId", (SelectList)ViewBag.StaffList, "Select Staff", new { @class = "form-select form-select-sm me-2" })
                            <button type="submit" class="btn btn-sm btn-primary">Assign</button>
                        }
                    }
                    else if (appt.Status == "Confirmed")
                    {
                        using (Html.BeginForm("MarkAsCompleted", "Dashboard", new { appointmentId = appt.AppointmentID }, FormMethod.Post))
                        {
                            <button type="submit" class="btn btn-sm btn-success">Complete</button>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No actions</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
