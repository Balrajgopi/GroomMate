@model IEnumerable<GroomMate.Models.Appointment>
@{ ViewBag.Title = "My Appointments"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<h3>My Appointments</h3>
<a href="@Url.Action("CustomerDashboard", "Dashboard")" class="btn btn-info mb-3">Back to Dashboard</a>

<table class="table">
    <thead>
        <tr>
            <th>Service</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Service.ServiceName</td>
                <td>@appointment.AppointmentDate.ToString("dd-MM-yyyy hh:mm tt")</td>
                <td>@appointment.Status</td>
                <td>
                    @if (appointment.Status == "Completed")
                    {
                        // Check if feedback has already been given
                        var db = new GroomMate.Models.GroomMateContext();
                        var hasFeedback = db.Feedbacks.Any(f => f.AppointmentID == appointment.AppointmentID);

                        if (hasFeedback)
                        {
                            <span class="badge bg-success">Feedback Submitted</span>
                        }
                        else
                        {
                            <a href="@Url.Action("Submit", "Feedback", new { appointmentId = appointment.AppointmentID })" class="btn btn-primary btn-sm">Give Feedback</a>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No actions available</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
